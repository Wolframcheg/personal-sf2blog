{% extends 'base.html.twig' %}

{% set title = pagetitle|default(main_title) %}


{% block body %}
<h1>{% block title %}{{ title }}{% endblock %}</h1>
{% for post in posts %}

        <div class="item-list">
                <article>
                        <h2><a href="{{ path('post_view', {'slug': post.slug}) }}">{{ post.title }}</a></h2>

                        <span><i class="glyphicon glyphicon-calendar"></i> {{ post.publishedAt|localizeddate('medium', 'none')}}</span>
                        <span><i class="glyphicon glyphicon-user"></i> {{ name_author }}</span>
                        {% if post.tags is not empty %}
                                <span><i class="glyphicon glyphicon-tags"></i>
                                {% for tag in post.tags %}
                                        <a class="label label-info" rel="nofollow" href="{{ path('tags', {'tag': tag.name}) }}">{{ tag.name }}</a>
                                {% endfor %}
                                </span>
                        {% endif %}
                </article>
        </div>
{% endfor %}

{% endblock %}
